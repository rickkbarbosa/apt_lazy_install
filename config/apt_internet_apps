#### Internet Add

	#Flash Player
	yum install -y http://linuxdownload.adobe.com/adobe-release/adobe-release-x86_64-1.0-1.noarch.rpm
	yum install -y pidgin pidgin-otr pidgin-libnotify thunderbird-enigmail icedtea-web tor

	#Here is two Twitter's Client: Hotot and Birdie. Choose your preferred uncommenting.
	yum install -y hotot-qt
	#yum install birdie 

	#Google Chrome
	if [[ $(uname -m;) -eq "x86_64" ]]; then
	        yum install -y https://dl.google.com/linux/direct/google-chrome-stable_current_x86_64.rpm --nogpgcheck
	        yum install -y http://dl.google.com/linux/direct/google-talkplugin_current_i386.rpm --nogpgcheck
	else
	        wget https://dl.google.com/linux/direct/google-chrome-stable_current_i386.deb
	        yum install -y http://dl.google.com/linux/direct/google-talkplugin_current_x86_64.rpm --nogpgcheck
	fi

	#Skype
	yum install -y http://download.skype.com/linux/skype-4.3.0.37-fedora.i586.rpm
