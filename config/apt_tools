#### Desktop Tools

#CPU Utils
yum -y install kernel-tools

#Basic Tools
#apt-get install -y alarm-clock alarm-clock-applet

#Cairo Dock
yum install -y cairo-dock

#Diodon 
#yum install -y diodon

#Filemanagers - Dropbox, Nemo, Owncloud and Insync (Unfortunately, I've had a lot of problems trying install grive on Fedora; Insync is the easiest way to sync Gdrive and an local folde)
yum install -y json-c json-c-devel qt-devel boost-devel openssl-devel libxslt libcurl libcurl-devel
yum install http://s.insynchq.com/builds/insync-1.1.5.32051-fc17.x86_64.rpm

yum install nemo-extensions nemo-rabbitvc nemo-preview nemo-dropbox nemo-devel gnome-mplayer-nemo nemo

	#Dropbox

	yum install -y nautilus-dropbox #owncloud-client

	#Kingsoft Office
	yum install -y http://kdl.cc.ksosoft.com/wps-community/download/a16/wps-office-9.1.0.4909-1.a16p1.i686.rpm

	#UnRar
	yum install -y unrar unrar-free


#Firefox Development
wget https://download-installer.cdn.mozilla.net/pub/firefox/nightly/latest-mozilla-aurora/firefox-35.0a2.en-US.linux-x86_64.tar.bz2
tar xvfj firefox-35.0a2.en-US.linux-x86_64.tar.bz2
sudo mv firefox /usr/local/bin/firefox-developer
cp ${SCRIPT_LOCATION}/packages/firefox-developer.desktop /usr/share/applications/
