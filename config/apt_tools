#Firefox Development
wget https://download-installer.cdn.mozilla.net/pub/firefox/nightly/latest-mozilla-aurora-l10n/firefox-42.0a2.pt-BR.linux-x86_64.tar.bz2
tar xvfj firefox-42.0a2.pt-BR.linux-x86_64.tar.bz2
sudo mv firefox /usr/local/bin/firefox-developer
cp ${SCRIPT_LOCATION}/packages/firefox-developer.desktop /usr/share/applications/

#Fedy - A Fedora Tweaker
wget http://satya164.github.io/fedy/fedy-installer
chmod +x fedy-installer
sudo ./fedy-installer


#Filebot - TV and Series organizer
yum -y install filebot
