# MySQL 5.5
apt-get install -y mysql-server-5.5
apt-get install -y mysql-server-core-5.5
apt-get install -y mysql-client-5.5
apt-get install -y mysql-client-core-5.5
apt-get install -y libdbd-mysql-perl
apt-get install -y libmysqlclient-dev

# PHP 5.5.*
apt-get install -y php5
apt-get install -y php-pear
apt-get install -y php5-cli
apt-get install -y php5-common
apt-get install -y php5-dev
apt-get install -y php-apc

# MySQL PHP driver + phpmyadmin
apt-get install -y php5-mysql
apt-get install -y phpmyadmin

# PHP Essential Libs
