#Desktop Environments
if [[ $DISTRO -eq "qiana" || $DISTRO -eq "petra" || $DISTRO -eq "trusty" || $DISTRO -eq "olivia" || $DISTRO -eq "nadia" || $DISTRO -eq "maya" ]]; then
	#Unity - for Linux Mint
	if [[ $DISTRO -eq "qiana" || $DISTRO -eq "petra" || $DISTRO -eq "olivia" || $DISTRO -eq "nadia" || $DISTRO -eq "maya" ]]; then
		apt-get install -y ubuntu-desktop
		sudo apt-get install unity unity-scope-askubuntu unity-lens-applications unity-webapps-bbcnews unity-greeter ubuntu-desktop
		apt-get install --install-recommends indicator-applet-complete
	fi
	apt-get install -y gnome-shell gnome-shell-extensions gnome-session gnome-tweak-tool gdm
	apt-get install -y xubuntu-desktop
	apt-get install -y cinnamon 
else
	apt-get install -y gnome-shell gnome-shell-extensions gnome-tweak-tool gdm
	apt-get install -y xubuntu-desktop 
	apt-get install -y cinnamon
fi
